datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

enum UserRole {
    USER
    ADMIN
}

model User {
    id              String        @id @default(uuid())
    createdAt       DateTime      @default(now())
    updatedAt       DateTime      @updatedAt
    email           String        @unique
    isEmailVerified Boolean
    firstName       String
    lastName        String
    password        String
    phoneNumber     Int
    profileImage    String
    reservations    Reservation[]
    rooms           Room[]
    role            UserRole      @default(USER)
}

model Reservation {
    id        String   @id @default(uuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    userId    String?
    roomId    String?
    user      User?    @relation(fields: [userId], references: [id])
    Room      Room?    @relation(fields: [roomId], references: [id])
    startDate DateTime
    endDate   DateTime
    price     Int
    total     Int
    reviews   Review[]
}

model Room {
    id                 String        @id @default(uuid())
    createdAt          DateTime      @default(now())
    updatedAt          DateTime      @updatedAt
    reservations       Reservation[]
    totalOccupancy     Int
    totalBedrooms      Int
    totalBathrooms     Int
    summary            String
    address            String
    hasTV              Boolean
    hasAirConditioning Boolean
    hasHeating         Boolean
    hasWIFI            Boolean
    price              Int
    owner              User?         @relation(fields: [ownerId], references: [id])
    ownerId            String?
    roomType           RoomType
    isSmoking          Boolean
    media              Media[]
}

enum RoomType {
    SINGLE
    DOUBLE
    TRIPLE
    QUAD
    QUEEN
    KING
    TWIN
    STUDIO
    SUITE
    ACCESSIBLE
}

model Review {
    id            String      @id @default(uuid())
    rating        Int
    comment       String
    reservation   Reservation @relation(fields: [reservationId], references: [id])
    reservationId String
}

model Media {
    id       String  @id @default(uuid())
    Room     Room?   @relation(fields: [roomId], references: [id])
    roomId   String?
    fileName String
}
